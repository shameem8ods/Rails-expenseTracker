<%= form_with(model: expense, local: false) do |form| %>
<div id="errors_div"></div>
<div class="modal-header">
  <h5 class="modal-title" id="exampleModalLabel">Add Expense</h5>
  <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
</div>
<div class="modal-body">
  <div class="input-group">
    <%= form.label :expense_type %>
    <%= form.text_field :expense_type, class: "form-control"  %>
  </div>

  <div class="input-group">
    <%= form.label :amount %>
    <%= form.text_field :amount, class: "form-control"  %>
  </div>

  <div >
    <%= form.label :date %>
    <%= form.date_select :date , class: "form-control" %>
  </div>
  <div>
    <%= form.number_field :user_id , value:current_user.id, type: :hidden %>
  </div>
</div>
<div class="modal-footer">
  <div class="input-submit">
    <%= form.submit %>
  </div>
</div>
<% end %>

